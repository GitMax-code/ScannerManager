<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ScannerManager.ViewModel"
             x:Class="ScannerManager.View.AddAnimalView"
             x:DataType="viewmodel:AddAnimalViewModel"
             Title="Add Animal">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Entry Placeholder="Name" Text="{Binding Name}" />
        <Entry Placeholder="Description" Text="{Binding Description}" />
        <Entry Placeholder="Picture URL" Text="{Binding Picture}" />
        <Button Text="Add Animal" Command="{Binding AddAnimalCommand}" />
    </VerticalStackLayout>
</ContentPage>